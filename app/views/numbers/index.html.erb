<style>
  me p.action_new { float: right; }
</style>
<div id="numbers">
  <p class="action_new" hx-get="/numbers/new"> Agregar Numero</p>
  <table>
    <thead>
      <tr>
        <th>alias_username</th>
        <th>alias_domain</th>
        <th>username</th>
        <th>domain</th>
      </tr>
    </thead>
    <tbody>
      <% @numbers.each do |number| %>
        <tr>
          <style>
            me td { border: 2px solid #a9a9a9; }
            me td[n1] { border: 2px solid green; }
          </style>
          <td><%= number.alias_username %></td>
          <td class="text-secondary">
            <%= number.alias_domain %>
          </td>
          <td class="text-secondary">
            <a href="#" class="text-reset">
              <%= number.username %>
            </a>
          </td>
          <td class="text-secondary">
              <%= number.domain %>
          </td>
          <td>
            <a href="#">Edit</a>
          </td>
          <td n1>
            <p hx-delete="/numbers/<%= number.id %>"
            hx-swap="outerHTML", hx-target="#numbers">
            [x]
          </p> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
