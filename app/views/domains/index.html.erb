<style>
tr.htmx-swapping td {
  opacity: 0;
  transition: opacity 1s ease-out;
}
</style>
<div id="domains">
  <table>
    <thead>
      <tr>
        <th>dominio</th>
        <th>cliente</th>
      </tr>
    </thead>
        <tbody hx-confirm="Deseas eliminar" hx-target="closest tr" hx-swap="outerHTML swap:1s">
      <% @domains.each do |domain| %>
        <tr hx-confirm="Deseas eliminar" hx-target="closest tr" hx-swap="outerHTML swap:1s">
          <style>
            me td { border: 2px solid #a9a9a9; }
            me td[n1] { border: 2px solid green; }
          </style>
          <td><%= domain.name %></td>
          <td><%= domain.customer.name %></td>
          <td n1>
            <p hx-delete="/domains/<%= domain.id %>">
            [x]
          </p> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


